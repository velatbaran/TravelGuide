@model TravelGuide.Entities.Entity.City
@{
    ViewBag.Title = "Şehir Detay Sayfası";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/admin.css" rel="stylesheet" />

<header class="intro-header" style="margin-top:70px">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">

            </div>
        </div>
    </div>
</header>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>@ViewBag.Title</h2>
            <hr />
        </div>

        <div class="form-horizontal">

            <div class="col-md-3">
                @Html.LabelFor(model => model.Image, htmlAttributes: new { @class = "control-label" })
                <img src="~/images/medias/@Model.Image" alt="@Model.Name" width="250" height="250" /><br />
            </div>

            <div class="col-md-9">
                <div class="form-group">
                    @Html.LabelFor(model => model.CountryId, "Ülke", htmlAttributes: new { @class = "control-label font-weight-bold col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Country.Name, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Name, "Şehir", htmlAttributes: new { @class = "control-label font-weight-bold col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Slogan, htmlAttributes: new { @class = "control-label font-weight-bold col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Slogan, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.DateInformation, htmlAttributes: new { @class = "control-label font-weight-bold col-md-2" })
                    <div class="col-md-10">
                        <textarea class="form-control" disabled cols="5" rows="10">@Html.Raw(Model.DateInformation)</textarea>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.WanderPlaces, htmlAttributes: new { @class = "control-label font-weight-bold col-md-2" })
                    <div class="col-md-10">
                        <textarea class="form-control" disabled cols="5" rows="10">@Html.Raw(Model.WanderPlaces)</textarea>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Foods, htmlAttributes: new { @class = "control-label font-weight-bold col-md-2" })
                    <div class="col-md-10">
                        <textarea class="form-control" disabled cols="5" rows="10">@Html.Raw(Model.Foods)</textarea>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.OtherInformations, htmlAttributes: new { @class = "control-label font-weight-bold col-md-2" })
                    <div class="col-md-10">
                        <textarea class="form-control" disabled cols="5" rows="10">@Html.Raw(Model.OtherInformations)</textarea>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.CreatedOn, htmlAttributes: new { @class = "control-label font-weight-bold col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CreatedOn, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.CreatedUsername, htmlAttributes: new { @class = "control-label font-weight-bold col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CreatedUsername, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ModifiedOn, htmlAttributes: new { @class = "control-label font-weight-bold col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ModifiedOn, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ModifiedUsername, htmlAttributes: new { @class = "control-label font-weight-bold col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ModifiedUsername, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <a href="/City/Edit/@Model.Id" class="btn btn-warning" title="Güncelle"><span class="glyphicon glyphicon-edit">&nbsp;</span>Güncelle</a>
                        <a href="/City/Index" class="btn btn-danger" title="Geri Dön"><span class="glyphicon glyphicon-hand-left">&nbsp;</span>Geri Dön</a>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>
<script src="~/Scripts/admin.js"></script>

