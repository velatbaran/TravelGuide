@model TravelGuide.Entities.Entity.City

<div class="modal fade" id="newCityModal" tabindex="-1" aria-labelledby="newCityModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title text-center" id="newCityModalLabel">Şehir Kayıt Sayfası</h3>
            </div>
            <div class="modal-body">
                <form action="/City/Create" method="post">
                    <div class="row">
                        <div class="col-md-12">
                            @Html.ValidationSummary(false)
                            <div class="form-group row">
                                @Html.LabelFor(model => model.Country.Id, "Ülke", htmlAttributes: new { @class = "col-form-label font-weight-bold col-md-2" })
                                @Html.DropDownListFor(model => model.Country.Id, (List<SelectListItem>)ViewBag.ListCountry, "ülke seçiniz...", new { @class = "form-control dropdown col-md-10" })
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "col-form-label font-weight-bold col-md-2" })
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control col-md-10" } })
                            </div>
                        </div>
                        <div class="col-md-12" style="margin-top:15px">
                            @MyBootstrapHelper.Button("success", "Kaydet", null, "submit", "save", "Kaydet")
                            <button type="button" class="btn btn-secondary" data-dismiss="modal" title="Kapat"><i class="fa fa-close mr-2">&nbsp;</i>Kapat</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>

