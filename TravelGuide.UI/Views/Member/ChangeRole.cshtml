@model TravelGuide.Entities.ValueObjects.ChangeRoleValueObject
@{
    ViewBag.Title = "Üye Rol Değiştirme Sayfası";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/admin.css" rel="stylesheet" />
<header class="intro-header" style="margin-top:70px">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">

            </div>
        </div>
    </div>
</header>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>@ViewBag.Title</h2>
            <hr />
        </div>

        @using (Html.BeginForm("ChangeRole", "Member", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <div class="col-md-12">
                    @Html.ValidationSummary(false)
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <div class="alert alert-info">
                            <span class="fa fa-info"></span> Üyenin rol bilgisini değiştirmek istediğinize emin misiniz?
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.MemberId, htmlAttributes: new { @class = "control-label font-weight-bold col-md-2" })
                        <div class="col-md-10">
                            <input type="text" name="MemberId" value="@ViewBag.MemberId" readonly/>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.RoleId, htmlAttributes: new { @class = "control-label font-weight-bold col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.RoleId, (SelectList)ViewBag.ListRole, "rol seçiniz...", new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            @MyBootstrapHelper.Button("primary", "Değiştir", string.Empty, "submit", "edit", "Değiştir")
                            @MyBootstrapHelper.LinkButton("/Member/Index", "danger", null, "Vazgeç", "ban", "Vazgeç")
                        </div>
                    </div>

                </div>

            </div>
        }

    </div>
</div>
<script src="~/Scripts/admin.js"></script>

