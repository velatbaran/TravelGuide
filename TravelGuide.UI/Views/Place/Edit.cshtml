@model TravelGuide.Entities.Entity.Place
@{
    ViewBag.Title = "Mekan Güncelleme Sayfası";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/admin.css" rel="stylesheet" />
<header class="intro-header" style="margin-top:70px">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">

            </div>
        </div>
    </div>
</header>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>@ViewBag.Title</h2>
            <hr />
        </div>

        @using (Html.BeginForm("Edit", "Place", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <div class="col-md-12">
                    @Html.ValidationSummary(false)
                </div>
                @Html.HiddenFor(model => model.Id)
                <div class="col-md-3">
                    <img src="~/images/medias/@Model.Image" alt="@Model.Name" width="250" height="250" /><br />
                    @Html.LabelFor(model => model.Image, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Image, new { htmlAttributes = new { @class = "form-control", type = "file" } }) <br />
                    <span class="glyphico glyphicon-info-sign">&nbsp;</span>
                    <span><i>Lütfen .png,.jpeg ya da .jpg formatı kullanın</i></span> <hr />
                </div>

                <div class="col-md-9">
                    <div class="form-group">
                        <div class="col-md-10">
                            <input type="text" name="CityId" value="@ViewBag.CityId" hidden />
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label font-weight-bold col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label font-weight-bold col-md-2" })
                        <div class="col-md-10">
                            <textarea class="form-control" name="Address" rows="5" cols="5">@Model.Address</textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label font-weight-bold col-md-2" })
                        <div class="col-md-10">
                            <textarea class="form-control" name="Description" rows="5" cols="5">@Model.Description</textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Phone, htmlAttributes: new { @class = "control-label font-weight-bold col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.RoadDescribe, htmlAttributes: new { @class = "control-label font-weight-bold col-md-2" })
                        <div class="col-md-10">
                            <textarea class="form-control" name="RoadDescribe" rows="5" cols="5">@Model.RoadDescribe</textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Latitude, htmlAttributes: new { @class = "control-label font-weight-bold col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Latitude, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Longitude, htmlAttributes: new { @class = "control-label font-weight-bold col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Longitude, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            @MyBootstrapHelper.Button("warning", "Güncelle", string.Empty, "submit", "edit", "Güncelle")
                            @MyBootstrapHelper.LinkButton("/Place/Index/" + ViewBag.CityId + "", "danger", null, "Dön", "angle-double-left", "Geri Dön")
                        </div>
                    </div>

                </div>

            </div>
        }

    </div>
</div>
<script src="~/Scripts/admin.js"></script>

