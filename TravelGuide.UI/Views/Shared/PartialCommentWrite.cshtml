@model int /*SehirId*/

<form action="/City/AddComment/@Model" method="post">
    <div class="row control-group">
        <div class="form-group col-md-12 floating-label-form-group controls">
            <label>Yorumunuz</label>
            <textarea type="text" class="form-control" cols="30" rows="2" placeholder="Yorumunuzu buraya giriniz" id="commenttext" name="commenttext" required="" data-validation-required-message="Lütfen bir yorum giriniz." maxlength="150"></textarea>
            <p class="help-block text-danger"></p>
        </div>
        <div class="col-md-10 col-md-offset-1 text-right">
            <div>
                <br />
                <button type="submit" class="btn btn-success">
                    <span class="glyphicon glyphicon-send"></span> Yorum Gönder
                </button>
            </div>
        </div>
    </div>
</form>
