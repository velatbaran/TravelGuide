@model TravelGuide.Entities.Entity.About
@{
    ViewBag.Title = "Hakkımızda Sayfasını Yönet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/admin.css" rel="stylesheet" />

<header class="intro-header" style="margin-top:70px">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">

            </div>
        </div>
    </div>
</header>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>@ViewBag.Title</h2>
            <hr />
        </div>

        @using (Html.BeginForm("GetAbout", "About", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <div class="col-md-12">
                    @Html.ValidationSummary(false)
                </div>
                @Html.HiddenFor(model => model.Id)
                <div class="col-md-3">
                    <img src="~/images/@Model.AboutImage" alt="" width="250" height="250" /><br />
                    @Html.LabelFor(model => model.AboutImage, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.AboutImage, new { htmlAttributes = new { @class = "form-control", type = "file" } }) <br />
                    <span class="glyphico glyphicon-info-sign">&nbsp;</span>
                    <span><i>Lütfen .png,.jpeg ya da .jpg formatı kullanın</i></span> <hr />
                </div>

                <div class="col-md-9">

                    <div class="form-group">
                        @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label font-weight-bold col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label font-weight-bold col-md-2" })
                        <div class="col-md-10">
                            <textarea class="form-control" name="Description" rows="10" cols="5">@Model.Description</textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            @MyBootstrapHelper.Button("success", "Kaydet", string.Empty, "submit", "check", "Kaydet")
                            @MyBootstrapHelper.LinkButton("/About/Index/", "default", null, "Sayfaya Dön", "angle-double-left", "Sayfaya Dön")
                        </div>
                    </div>

                </div>

            </div>
        }

    </div>
</div>
<script src="~/Scripts/admin.js"></script>

