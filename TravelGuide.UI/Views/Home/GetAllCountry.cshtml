@using TravelGuide.Entities.Entity
@model List<Country>

<div class="col-lg-4 col-md-4">
    <ul class="list-group">
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <h3>Ülkeler</h3>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <a href="/Home/Index">Hepsi</a>
            <span class="badge bg-primary rounded-pill">@ViewBag.AllCityCount</span>
        </li>
        @foreach (Country item in Model)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <a href="/Home/GetCitiesByCountryId/@item.Id">@item.Name</a>
                <span class="badge bg-primary rounded-pill">@item.Cities.ToList().Count()</span>
            </li>
        }
    </ul>
</div>